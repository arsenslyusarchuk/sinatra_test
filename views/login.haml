%form.form-signin{action: '/auth/login', method: 'POST'}
  %h2.form-signin-heading Please sign in
  %label.sr-only{:for => "inputEmail"} Email address
  %input#inputEmail.form-control{name: "user[email]", :autofocus => "", :placeholder => "Email address", :required => "", :type => "email"}/
  %label.sr-only{:for => "inputPassword"} Password
  %input#inputPassword.form-control{name: "user[password]", :placeholder => "Password", :required => "", :type => "password"}/
  .checkbox
    %label
      %input{:type => "checkbox", :value => "remember-me"}/
      Remember me
  %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in