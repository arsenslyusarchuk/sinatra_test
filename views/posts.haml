.page-header
  %h1 Posts
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Text
      %th Body
      %th Created At
      %th Actions
  %tbody
    - Post.each do |post|
      %tr
        %td
          %a{:href => "/posts/#{post[:id]}"}= post[:id]
        %td= post[:title]
        %td= post[:body]
        %td= post[:created_at]
        %td
          - if post[:id] == current_user.id
            %form{:action => "/posts/#{post[:id]}/destroy", :method => "POST"}
              %input.btn.btn-danger{:name => "commit", :type => "submit", :value => "Delete"}/
          / = link_to 'Edit', '/', :class => 'btn btn-default btn-xs'
          / = link_to 'Destroy', post_path(post), :method => :delete, :data => { :confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger'

/ = link_to 'New', new_post_path, :class => 'btn btn-primary'